        "pronunciation": null,
        "pronunciation_information": null,
        "type": null,
        "translations": {
          "English": {
            "Dr. Surinder Singh Kohli": {
              "translation": "(Incidentally,) a mendicant was there at the time, who had watched the entire episode.",
