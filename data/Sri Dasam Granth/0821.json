        "pronunciation": null,
        "pronunciation_information": null,
        "type": null,
        "translations": {
          "English": {
            "Dr. Surinder Singh Kohli": {
              "translation": "He went and narrated the whole story to his friend, the shopkeeper.(11)",
              "additional_information": {}
            }
          },
          "Punjabi": {
            "Dr. Rattan Singh Jaggi": {
              "translation": "ਬਨੀਆ ਉਸ ਦਾ ਮਿਤਰ ਸੀ, (ਇਸ ਲਈ) ਉਸ ਨੂੰ ਚੰਗੀ ਤਰ੍ਹਾਂ ਕਹਿ ਦਿੱਤਾ ॥੧੧॥",
              "additional_information": {}
            }
