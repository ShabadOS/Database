        "translations": {
          "English": {
            "Dr. Surinder Singh Kohli": {
              "translation": "A shopkeeper used to live in the city of Peshawar, whose wife was overrun by bad characters.",
              "additional_information": {}
            }
          },
          "Punjabi": {
            "Dr. Rattan Singh Jaggi": {
              "translation": "ਪਿਸ਼ੌਰ ਵਿਚ ਇਕ ਬਨੀਆ ਸੀ ਜਿਸ ਦੀ (ਇਕ) ਬਦਚਲਨ ਇਸਤਰੀ ਸੀ।",
              "additional_information": {}
            }
          }
        }
      },
      {
        "id": "BKV5",
